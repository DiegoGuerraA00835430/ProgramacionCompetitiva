// Ranferi MÃ¡rquez Puig

#include <iostream>
#include <vector>
using namespace std;

int main() {
    int t; 
    cin >> t;

    while (t--) {
        int n;
        cin >> n;
        vector<int> a(n);
        
        for (int i = 0; i < n; ++i)
            cin >> a[i];

        int valor_comun;
        if (a[0] == a[1]) {
            valor_comun = a[0];
        } else if (a[0] == a[2]) {
            cout << 2 << endl; // a[1] es el distinto
            continue;
        } else {
            cout << 1 << endl; // a[0] es el distinto
            continue;
        }

        // Buscar el valor distinto
        for (int i = 0; i < n; ++i) {
            if (a[i] != valor_comun) {
                cout << i + 1 << endl;
                break;
            }
        }
    }

    return 0;
}
